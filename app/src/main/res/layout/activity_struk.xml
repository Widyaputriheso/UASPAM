<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:paddingLeft="64dp"
    android:paddingTop="16dp"
    android:paddingRight="64dp"
    android:paddingBottom="16dp"
    tools:context=".struk">

    <!--ini untuk memasukan text pesanan anda-->
    <TextView
        android:id="@+id/pemesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesanan Anda:" />

    <!--    ini untuk memasukan text total pesanan-->
    <TextView
        android:id="@+id/totalpesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <!--    ini untuk memasukan text total pembayaran-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Pembayaran:" />

    <!--    ini untuk memasukan text total harga-->
    <TextView
        android:id="@+id/totalharga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />
    <!--    ini untuk memasukan text erimakasih sudah membeli Bakry murah enak dan terjangkau-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Terimakasih sudah membeli Bakry murah enak dan terjangkau"
        android:textAlignment="center"
        android:textSize="22dp" />

</LinearLayout>